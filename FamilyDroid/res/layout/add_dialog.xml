<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/RelativeLayout01" android:layout_width="fill_parent" android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android">
 
<EditText android:id="@+id/name" android:layout_width="fill_parent" android:layout_height="wrap_content" android:singleLine="true" />
<EditText android:id="@+id/pnr" android:layout_width="fill_parent" android:layout_height="wrap_content" android:inputType="number" android:layout_below="@+id/name" android:layout_alignLeft="@+id/name" android:layout_alignRight="@+id/name" android:singleLine="true"></EditText> 
<Button android:layout_width="wrap_content" android:gravity="center" android:text="Done" android:id="@+id/done" android:layout_height="wrap_content" android:layout_below="@+id/pnr"></Button>



</RelativeLayout>